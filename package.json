  "bin": {
    "investigations": "dist/index.js",
    "investigations-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest --config jest.config.js --passWithNoTests",
    "test:stress": "tsx scripts/simple-stress-test.ts",
    "test:stress:full": "tsx scripts/stress-test.ts",
    "test:stress:build": "npm run build && node --max-old-space-size=4096 --expose-gc dist/scripts/simple-stress-test.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare-publish": "node scripts/prepare-publish.js",
    "docker:build": "docker build -t investigations:latest .",
    "docker:run": "docker run --rm -i investigations:latest",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up"
  },
  "files": [
    "dist/",
    "README.md",
    "examples/",
